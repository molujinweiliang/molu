/*商品详情1  */
.detail {
  width: 100%;
  height: 304rpx;
  background-color: white;
  border-bottom: 1rpx solid #f2f2f2;
}
.left {
  width: 220rpx;
  height: 220rpx;
  margin-left: 30rpx;
  margin-top: 40rpx;
}

.right {
  width: 430rpx;
  height: 220rpx;
  float: right;
  margin-right: 30rpx;

.name {
  color: #000;
  font-weight: bold;
}
.msg {
  font-size: 28rpx;
  color: #808080;
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 20rpx;
}
.price{
  color: #ff0000;
  font-size: 34rpx;
  margin-top: 30rpx;
}

